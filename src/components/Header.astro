---
import HeaderLink from "./HeaderLink.astro";
import { Image } from "@astrojs/image/components";

import {
  SITE_TITLE,
  TWITTER_PROFILE_URL,
  GITHUB_PROFILE_URL,
  YOUTUBE_PROFILE_URL,
  STACKOVERFLOW_PROFILE_URL,
} from "../config";
---

<header>
  <a href="/" rel="prefetch">
    <Image
      src="/logos/sheep-transparent.svg"
      alt="Pixel Sheep Icon"
      format="svg"
      width={128}
      height={128}
    />
    <h2>
      {SITE_TITLE}
    </h2>
  </a>
  <nav>
    <!-- <HeaderLink href="/">Home</HeaderLink> -->
    <HeaderLink href="/blog">Blog</HeaderLink>
    <!-- <HeaderLink href="/about">About</HeaderLink> -->
    <HeaderLink href={TWITTER_PROFILE_URL} target="_blank" aria-label="Twitter">
      <i class="fa-brands fa-twitter"></i>
    </HeaderLink>
    <HeaderLink href={GITHUB_PROFILE_URL} target="_blank" aria-label="GitHub">
      <i class="fa-brands fa-github"></i>
    </HeaderLink>
    <!-- <HeaderLink
      href="https://linkedin.com/"
      target="_blank"
      aria-label="Linkedin"
    >
      <i class="fa-brands fa-linkedin"></i>
    </HeaderLink> -->
    <HeaderLink href={YOUTUBE_PROFILE_URL} target="_blank" aria-label="YouTube">
      <i class="fa-brands fa-youtube"></i>
    </HeaderLink>
    <HeaderLink
      href={STACKOVERFLOW_PROFILE_URL}
      target="_blank"
      aria-label="Stack Overflow"
    >
      <i class="fa-brands fa-stack-overflow"></i>
    </HeaderLink>
    <HeaderLink href="/rss.xml" target="_blank" aria-label="RSS Feed">
      <i class="fa-solid fa-rss"></i>
    </HeaderLink>
  </nav>
</header>
<style>
  a {
    color: inherit;
    text-decoration: none;
  }
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0;
    margin-bottom: 0.5em;
  }
</style>
