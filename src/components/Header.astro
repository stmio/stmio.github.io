---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, GITHUB_PROFILE_URL, TWITTER_PROFILE_URL } from "../config";
---

<header>
  <h2>
    <a class="homepage-link" href="/">
      {SITE_TITLE}
    </a>
  </h2>
  <nav>
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <!-- <HeaderLink href="/about">About</HeaderLink> -->
    <HeaderLink href={TWITTER_PROFILE_URL} target="_blank">Twitter</HeaderLink>
    <HeaderLink href={GITHUB_PROFILE_URL} target="_blank">GitHub</HeaderLink>
  </nav>
</header>
<style>
  .homepage-link {
    color: rgb(34, 34, 34);
    text-decoration: none;
  }
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
</style>
